# Convex
# Get your Convex deployment URL from: https://dashboard.convex.dev
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud

# Convex Deployment (for convex CLI in packages/convex)
# Format: dev:deployment-name or prod:deployment-name
CONVEX_DEPLOYMENT=dev:your-deployment-name

# Authentication (Convex Auth)
# Generate a strong secret: openssl rand -base64 32
AUTH_SECRET=your-auth-secret-here

# OAuth Providers (optional)
# Google: https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# Apple: https://developer.apple.com/account/resources/identifiers/list
AUTH_APPLE_ID=
AUTH_APPLE_SECRET=

# Facebook: https://developers.facebook.com/apps
AUTH_FACEBOOK_ID=
AUTH_FACEBOOK_SECRET=

# Site URL (for OAuth callbacks)
SITE_URL=http://localhost:3000

# Google Maps API
# Get your API key from: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Payment Providers (Vendor/Server-side only)
MOMO_PARTNER_CODE=
MOMO_ACCESS_KEY=
MOMO_SECRET_KEY=
VNPAY_TMN_CODE=
VNPAY_HASH_SECRET=
PAYOS_CLIENT_ID=
PAYOS_API_KEY=
PAYOS_CHECKSUM_KEY=

# Zalo
ZALO_OA_ACCESS_TOKEN=
ZALO_OA_APP_ID=
