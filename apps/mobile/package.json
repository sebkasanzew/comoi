{
  "name": "@comoi/mobile",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "main": "expo-router/entry",
  "scripts": {
    "dev": "expo start",
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build:web": "expo export --platform web --clear",
    "build": "bun build:web",
    "lint": "biome check . && eslint .",
    "lint:fix": "biome check --write . && eslint . --fix",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit",
    "test": "bun test __tests__",
    "test:watch": "bun test --watch __tests__",
    "clean": "rm -rf .expo .turbo dist ios android",
    "e2e:prebuild": "npx expo prebuild --clean",
    "e2e:build:ios": "detox build --configuration ios.sim.release",
    "e2e:build:android": "bun run e2e:prebuild && detox build --configuration android.emu.release",
    "e2e:test:ios": "detox test --configuration ios.sim.release",
    "e2e:test:android": "detox test --configuration android.emu.release",
    "test:ui": "echo 'Detox does not have an interactive UI mode like Playwright. Use: bun run e2e:test:ios -- --verbose' && echo 'Or use test:ui:debug for detailed logging and screenshots' && bun run e2e:test:ios -- --verbose",
    "test:ui:debug": "detox test --configuration ios.sim.release --record-logs all --take-screenshots all",
    "test:ui:android": "detox test --configuration android.emu.release --record-logs all --take-screenshots all"
  },
  "dependencies": {
    "@clerk/clerk-expo": "^2.19.20",
    "@comoi/convex": "workspace:*",
    "@comoi/shared": "workspace:*",
    "@convex-dev/auth": "^0.0.90",
    "@expo/vector-icons": "15.0.3",
    "@react-navigation/bottom-tabs": "7.4.0",
    "@react-navigation/elements": "2.6.3",
    "@react-navigation/native": "7.1.8",
    "convex": "1.31.6",
    "expo": "54.0.32",
    "expo-constants": "18.0.13",
    "expo-font": "14.0.11",
    "expo-haptics": "15.0.8",
    "expo-image": "3.0.11",
    "expo-linking": "8.0.11",
    "expo-router": "6.0.22",
    "expo-secure-store": "^15.0.8",
    "expo-splash-screen": "31.0.13",
    "expo-status-bar": "3.0.9",
    "expo-symbols": "1.0.8",
    "expo-system-ui": "6.0.9",
    "expo-web-browser": "15.0.10",
    "nativewind": "4.1.23",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "2.28.0",
    "react-native-reanimated": "4.1.1",
    "react-native-safe-area-context": "5.6.0",
    "react-native-screens": "4.16.0",
    "react-native-web": "0.21.0",
    "react-native-worklets": "0.5.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "7.28.6",
    "@babel/runtime": "7.28.6",
    "@comoi/eslint-config": "workspace:*",
    "@comoi/typescript-config": "workspace:*",
    "@jest/reporters": "29.7.0",
    "@jest/types": "29.6.3",
    "@types/bun": "1.2.19",
    "@types/jest": "29.5.14",
    "@types/react": "19.1.0",
    "babel-preset-expo": "54.0.10",
    "detox": "20.37.0",
    "eslint": "9.39.0",
    "eslint-config-expo": "10.0.0",
    "jest": "29.7.0",
    "jest-environment-node": "29.7.0",
    "tailwindcss": "3.4.17",
    "typescript": "5.9.2"
  }
}
